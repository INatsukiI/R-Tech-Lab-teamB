<div class="container">
    <div class="row">
        <h1>チャットルーム</h1>
    </div>
    <div class="row">
        <div class="user-list d-flex flex-column center-block bg-light p-4">
            <table class="table d-flex justify-content-center">
                <tr><th>入室中のユーザ</th></tr>
                <tr><td>Aさん</td></tr>
                <tr><td>Aさん</td></tr>
                <tr><td>Aさん</td></tr>
                <tr><td>Aさん</td></tr>
            </table>
            <table class="table d-flex justify-content-center">
                <tr><th>退室中のユーザ</th></tr>
                <tr><td>Aさん</td></tr>
            </table>
        </div>
        <div class="chat bg-light p-4">
            <form method="post" action="/">
                <div class="room-login_user d-flex justify-content-center">
                    ログインユーザ：{{userName}}さん（{{position}}）
                    <input id="userName" type="hidden" value="{{userName}}" />
                    <input id="position" type="hidden" value="{{position}}" />
                </div>
                <div class="room-thread center-block">
                    <div class="center-block" id="thread"></div>
                </div>
                <div class="room-message d-flex justify-content-center">
                    <textarea
                        id="message"
                        rows="2"
                        class="room-message_textarea form-control"
                        placeholder="投稿文を入力してください"
                    ></textarea>
                </div>
                <div class="room-submit d-flex justify-content-center">
                    <input
                        type="button"
                        value="メモ"
                        class="common-button room-memo_button btn btn-warning m-4"
                        onclick="memo();"
                    />
                    <input
                        type="button"
                        value="投稿"
                        class="common-button room-publish_button btn btn-primary m-4"
                        onclick="publish();"
                    />
                </div>
                <div class="room-exit d-flex justify-content-center">
                    <input
                        type="button"
                        value="退室する"
                        class="common-button room-exit_button btn btn-danger"
                        onclick="exit();"
                    />
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/javascripts/socket.js"></script>
<script src="/javascripts/enter.js"></script>
<script src="/javascripts/publish.js"></script>
<script src="/javascripts/memo.js"></script>
<script src="/javascripts/exit.js"></script>